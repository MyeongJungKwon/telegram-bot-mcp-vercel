{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "/api/webhook.ts"
    },
    {
      "src": "/mcp",
      "dest": "/api/mcp.ts"
    },
    {
      "src": "/mcp/(.*)",
      "dest": "/api/mcp.ts"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "BOT_TOKEN": "@bot_token",
    "WEBHOOK_URL": "@webhook_url"
  }
}